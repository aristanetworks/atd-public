[Unit]
Description=Automatically checks local ATD Repo copy and installs/removes any Python PIP packages
Required=atdServiceUpdater.service
After=atdServiceUpdater.service

[Service]
Type=forking
ExecStart=/usr/local/bin/atdPipUpdater.sh
User=root
Restart=on-failure
RestartSec=60

[Install]
WantedBy=multi-user.target
