# Turn off the startup message.
startup_message off
# Set the caption to the active windows.
caption always "%-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%<"

term screen-256color

# New screens for various processes.
# Example: screen -t <hostname> <screen number> <command>
