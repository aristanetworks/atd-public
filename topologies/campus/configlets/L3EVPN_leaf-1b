vlan internal order ascending range 1006 1199
!
spanning-tree mode mstp
no spanning-tree vlan-id 4093-4094
spanning-tree mst 0 priority 4096
!
vlan 110
   name IDF1-Data
!
vlan 120
   name IDF1-Voice
!
vlan 130
   name IDF1-Guest
!
vlan 4093
   name LEAF_PEER_L3
   trunk group LEAF_PEER_L3
!
vlan 4094
   name MLAG_PEER
   trunk group MLAG
!
interface Port-Channel47
   description MLAG_PEER_leaf-1a_Po47
   no shutdown
   switchport
   switchport mode trunk
   switchport trunk group LEAF_PEER_L3
   switchport trunk group MLAG
!
interface Ethernet1
   description IDF1 Standard Port
   no shutdown
   switchport trunk native vlan 110
   switchport phone vlan 120
   switchport phone trunk untagged
   switchport mode trunk phone
   switchport
   dot1x pae authenticator
   dot1x authentication failure action traffic allow vlan 130
   dot1x reauthentication
   dot1x port-control auto
   dot1x host-mode multi-host authenticated
   dot1x mac based authentication
   dot1x timeout tx-period 3
   dot1x timeout reauth-period server
   dot1x reauthorization request limit 3
   spanning-tree portfast
   spanning-tree bpduguard enable
!
interface Ethernet47
   description MLAG_PEER_leaf-1a_Ethernet47
   no shutdown
   channel-group 47 mode active
!
interface Ethernet48
   description MLAG_PEER_leaf-1a_Ethernet48
   no shutdown
   channel-group 47 mode active
!
interface Ethernet49
   description P2P_LINK_TO_SPINE-2_Ethernet3
   no shutdown
   mtu 1500
   no switchport
   ip address 10.0.0.7/31
!
interface Loopback0
   description EVPN_Overlay_Peering
   no shutdown
   ip address 10.255.0.6/32
!
interface Loopback1
   description VTEP_VXLAN_Tunnel_Source
   no shutdown
   ip address 10.255.1.5/32
!
interface Vlan110
   description IDF1-Data
   no shutdown
   ip address virtual 10.1.10.1/24
!
interface Vlan120
   description IDF1-Voice
   no shutdown
   ip address virtual 10.1.20.1/24
!
interface Vlan130
   description IDF1-Guest
   no shutdown
   ip address virtual 10.1.30.1/24
!
interface Vlan4093
   description MLAG_PEER_L3_PEERING
   no shutdown
   mtu 1500
   ip address 10.255.2.5/31
!
interface Vlan4094
   description MLAG_PEER
   no shutdown
   mtu 1500
   no autostate
   ip address 10.255.255.5/31
!
interface Vxlan1
   description leaf-1b_VTEP
   vxlan source-interface Loopback1
   vxlan virtual-router encapsulation mac-address mlag-system-id
   vxlan udp-port 4789
   vxlan vlan 110 vni 10110
   vxlan vlan 120 vni 10120
   vxlan vlan 130 vni 10130
   vxlan vrf default vni 5001
!
ip virtual-router mac-address 00:1c:73:00:00:99
!
ip routing
!
ip prefix-list PL-LOOPBACKS-EVPN-OVERLAY
   seq 10 permit 10.255.0.0/24 eq 32
   seq 20 permit 10.255.1.0/24 eq 32
!
ip prefix-list PL-SVI-VRF-DEFAULT
   seq 10 permit 10.1.10.0/24
   seq 20 permit 10.1.20.0/24
   seq 30 permit 10.1.30.0/24
!
mlag configuration
   domain-id IDF1
   local-interface Vlan4094
   peer-address 10.255.255.4
   peer-link Port-Channel47
   reload-delay mlag 300
   reload-delay non-mlag 330
!
route-map RM-BGP-UNDERLAY-PEERS-OUT deny 10
   match ip address prefix-list PL-SVI-VRF-DEFAULT
!
route-map RM-BGP-UNDERLAY-PEERS-OUT permit 20
!
route-map RM-CONN-2-BGP permit 10
   match ip address prefix-list PL-LOOPBACKS-EVPN-OVERLAY
!
route-map RM-CONN-2-BGP permit 30
   match ip address prefix-list PL-SVI-VRF-DEFAULT
!
route-map RM-EVPN-EXPORT-VRF-DEFAULT permit 10
   match ip address prefix-list PL-SVI-VRF-DEFAULT
!
route-map RM-MLAG-PEER-IN permit 10
   description Make routes learned over MLAG Peer-link less preferred on spines to ensure optimal routing
   set origin incomplete
!
router bfd
   multihop interval 300 min-rx 300 multiplier 3
!
router bgp 65111
   router-id 10.255.0.6
   maximum-paths 4 ecmp 4
   no bgp default ipv4-unicast
   neighbor EVPN-OVERLAY-PEERS peer group
   neighbor EVPN-OVERLAY-PEERS update-source Loopback0
   neighbor EVPN-OVERLAY-PEERS bfd
   neighbor EVPN-OVERLAY-PEERS ebgp-multihop 3
   neighbor EVPN-OVERLAY-PEERS send-community
   neighbor EVPN-OVERLAY-PEERS maximum-routes 0
   neighbor IPv4-UNDERLAY-PEERS peer group
   neighbor IPv4-UNDERLAY-PEERS send-community
   neighbor IPv4-UNDERLAY-PEERS maximum-routes 12000
   neighbor IPv4-UNDERLAY-PEERS route-map RM-BGP-UNDERLAY-PEERS-OUT out
   neighbor MLAG-IPv4-UNDERLAY-PEER peer group
   neighbor MLAG-IPv4-UNDERLAY-PEER remote-as 65111
   neighbor MLAG-IPv4-UNDERLAY-PEER next-hop-self
   neighbor MLAG-IPv4-UNDERLAY-PEER description leaf-1a
   neighbor MLAG-IPv4-UNDERLAY-PEER send-community
   neighbor MLAG-IPv4-UNDERLAY-PEER maximum-routes 12000
   neighbor MLAG-IPv4-UNDERLAY-PEER route-map RM-MLAG-PEER-IN in
   neighbor 10.0.0.6 peer group IPv4-UNDERLAY-PEERS
   neighbor 10.0.0.6 remote-as 65001
   neighbor 10.0.0.6 description spine-2_Ethernet3
   neighbor 10.255.2.4 peer group MLAG-IPv4-UNDERLAY-PEER
   neighbor 10.255.2.4 description leaf-1a
   neighbor 172.16.1.2 peer group EVPN-OVERLAY-PEERS
   neighbor 172.16.1.2 remote-as 65001
   neighbor 172.16.1.2 description spine-2
   redistribute connected route-map RM-CONN-2-BGP
   !
   vlan 110
      rd 10.255.0.6:10110
      route-target both 10110:10110
      redistribute learned
   !
   vlan 120
      rd 10.255.0.6:10120
      route-target both 10120:10120
      redistribute learned
   !
   vlan 130
      rd 10.255.0.6:10130
      route-target both 10130:10130
      redistribute learned
   !
   address-family evpn
      neighbor EVPN-OVERLAY-PEERS activate
   !
   address-family ipv4
      no neighbor EVPN-OVERLAY-PEERS activate
      neighbor IPv4-UNDERLAY-PEERS activate
      neighbor MLAG-IPv4-UNDERLAY-PEER activate
   !
   vrf default
      rd 10.255.0.6:5001
      route-target import evpn 5001:5001
      route-target export evpn 5001:5001
      route-target export evpn route-map RM-EVPN-EXPORT-VRF-DEFAULT